# ===== Backend (Render) =====

# Порт сервера
PORT=3001

# Режим работы
NODE_ENV=production

# URL frontend (Vercel)
FRONTEND_URL=https://smart-home-app.vercel.app

# ===== База данных =====
# MongoDB Atlas connection string
# mongodb+srv://user:password@cluster.mongodb.net/dbname
MONGODB_URI=

# ===== Безопасность =====
# Случайная строка для JWT (минимум 32 символа)
JWT_SECRET=

# ===== Email (Yandex) =====
# https://id.yandex.ru/security/app-passwords
SMTP_USER=
SMTP_PASS=

# ===== OAuth =====
# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===== Weather API =====
# https://openweathermap.org/api
OPENWEATHER_API_KEY=
