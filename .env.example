# ===== Backend (Render) =====

# Порт сервера
PORT=7860

# Режим работы
NODE_ENV=production

# URL backend (укажите ваш Render URL после деплоя)
BACKEND_URL=https://your-app.onrender.com

# URL frontend
FRONTEND_URL=https://tox1k332.github.io/smart-home-app

# ===== База данных =====
# MongoDB Atlas connection string
# Format: mongodb+srv://user:password@cluster.mongodb.net/dbname
MONGODB_URI=

# ===== Безопасность =====
# Случайная строка для JWT (минимум 32 символа)
JWT_SECRET=

# ===== Email (Yandex) =====
# https://id.yandex.ru/security/app-passwords
SMTP_USER=
SMTP_PASS=

# ===== OAuth =====
# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===== Weather API =====
# https://openweathermap.org/api
OPENWEATHER_API_KEY=
